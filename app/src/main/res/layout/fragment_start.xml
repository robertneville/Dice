<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.example.robert.dice.FragmentStart">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            style="@style/homeButton"
            android:id="@+id/load_game"
            android:layout_width="120sp"
            android:background="@drawable/buttonshape"
            android:layout_height="wrap_content"
            android:layout_below="@+id/new_game"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="@string/load_game" />

        <Button
            style="@style/homeButton"
            android:id="@+id/new_game"
            android:layout_width="120sp"
            android:background="@drawable/buttonshape"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/load_game"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/load_game"
            android:layout_marginTop="97dp"
            android:text="@string/new_game" />

        <Button
            style="@style/homeButton"
            android:id="@+id/high_score"
            android:layout_width="120sp"
            android:background="@drawable/buttonshape"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/load_game"
            android:layout_alignStart="@+id/load_game"
            android:layout_below="@+id/load_game"
            android:layout_marginTop="48dp"
            android:text="@string/high_scores" />

    </RelativeLayout>


</LinearLayout>
